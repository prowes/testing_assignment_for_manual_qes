[Unit]
Description=Gunicorn instance for a simple hello world app
After=network.target
[Service]
User=ec2-user
Group=www-data
WorkingDirectory=/home/ec2-user/flapp/
ExecStart=/home/ec2-user/flapp/venv/bin/gunicorn -b localhost:8001 application:application
Restart=always
[Install]
WantedBy=multi-user.target